@model QuanLyGaraOto.Models.Xe

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/faker.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#generate").click(function () {
            $("#TenChuXe").val(faker.name.findName());
            $("#DiaChi").val(faker.address.city());
            $("#DienThoai").val(faker.phone.phoneNumberFormat());
            $("#TienNo").val(faker.commerce.price());
        });
    });
</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Xe</h4>
        <hr />
        @Html.ValidationSummary(true)
        <input type="button" id="generate" value="Generate" class="btn btn-secondary" />
        
        <div class="form-group">
            @Html.LabelFor(model => model.TenChuXe, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuXe)
                @Html.ValidationMessageFor(model => model.TenChuXe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDHieuXe, "IDHieuXe", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDHieuXe", String.Empty)
                @Html.ValidationMessageFor(model => model.IDHieuXe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TienNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TienNo)
                @Html.ValidationMessageFor(model => model.TienNo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

