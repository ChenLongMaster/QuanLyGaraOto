
@{
    /**/

    ViewBag.Title = "Report";
}
<style>
    * {
        color: white;
    }

    body {
        margin: 0;
        padding: 0;
        background: url("/Content/themes/base/images/BG-Report.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: sans-serif
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.5);
        padding: 30px 40px;
        margin-top: 10vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 99%;
    }


    h2 {
        margin: 0;
        padding-left: 20px;
        padding-bottom: 20px;
        color: #ff0000;
    }

    footer {
        position: unset;
    }
</style>
<h2>LapBaoCaoThang</h2>
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-2 col-sm-2 col-xs-12"></div>

        <div class="col-md-8 col-sm-9 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="panel panel-default">
                    <Center>
                        <h2>BÁO CÁO DOANH SỐ</h2>
                    </Center>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="form-inline center-block">
                                <div class="form-group col-md-6">
                                    @Html.Label("Từ ngày:", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="datetime1" name="dtp1">
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.Label(" Đến:", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="datetime2" name="dtp2">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
}
<script type="text/javascript">
    $(function () {
        $(".form-control").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>

